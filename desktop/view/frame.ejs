<header class="toolbar toolbar-header">
    <h1 class="title"><%= blog.name %> – Innsbruck</h1>

    <div class="toolbar-actions">
        <button class="btn btn-default btn-iframe" data-iframe="/">
            <span class="icon icon-home"></span>
        </button>

        <div class="btn-group">
            <button class="btn btn-default btn-iframe" data-iframe="/post/new">
                <span class="icon icon-plus icon-text"></span>
                Post
            </button>
            <button class="btn btn-default btn-iframe" data-iframe="/page/new">
                <span class="icon icon-plus icon-text"></span>
                Page
            </button>
        </div>

        <button class="btn btn-default pull-right" onclick="export_form.submit()">
            <span class="icon icon-install"></span>
        </button>

        <div class="btn-group pull-right">
            <button class="btn btn-default">
                <a href="/index.html" target="_blank">
                    <span class="icon icon-eye"></span>
                </a>
            </button>
            <button class="btn btn-default btn-iframe" data-iframe="/settings">
                <span class="icon icon-cog"></span>
            </button>
        </div>
    </div>
</header>

<iframe name="hidden_frame" id="hidden_frame" style="display: none"></iframe>
<form name="export_form" method="POST" action="/export" target="hidden_frame" style="display: none"></form>

<iframe id="frame" src="/" allowtransparency="true"></iframe>

<footer class="toolbar toolbar-footer">
    <h1 class="title"><%= blog.name %> – Powered by Innsbruck</h1>
</footer>
