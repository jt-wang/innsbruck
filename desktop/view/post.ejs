
<header class="toolbar toolbar-header toolbar-transparent">
  <div class="toolbar-actions">
    <button class="btn btn-default" onclick='iconfirm("Delete <%= post.title %>?", function () { delete_form.submit(); window.parent.location.reload(); })'>
      <span class="icon icon-trash"></span>
    </button>

    <button class="btn btn-default btn-link pull-right" data-link="/post/<%= post.link %>/edit">
      <span class="icon icon-pencil icon-text"></span>
      Edit
    </button>
  </div>
</header>

<div class="post-view">
  <article>

    <h2 class="wrap"><%= post.title %></h2>
    <span class="date">
      <time><%= (new Date(post.time)).toLocaleString() %></time>
    </span>
    <p><%- marked(post.content) %></p>
  </article>

  <%- plugin.enable && plugin.postBottom ? plugin.postBottom() : '' %>

  <form id="delete_form" style="display: none" method="POST" action="/post/<%= post.link %>/delete"></form>
</div>
