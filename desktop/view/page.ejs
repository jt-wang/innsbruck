
<header class="toolbar toolbar-header toolbar-transparent">
  <div class="toolbar-actions">
    <button class="btn btn-default" onclick='iconfirm("Delete <%= page.title %>?", function () { delete_form.submit(); window.parent.location.reload(); })'>
      <span class="icon icon-trash"></span>
    </button>

    <button class="btn btn-default btn-link pull-right" data-link="/page/<%= page.link %>/edit">
      <span class="icon icon-pencil icon-text"></span>
      Edit
    </button>
  </div>
</header>

<div class="post-view">
  <article>
    <h2 class="page-title"><%= page.title %></h2>
    <p><%- marked(page.content) %></p>
  </article>

  <%- plugin.enable && plugin.pageBottom ? plugin.pageBottom() : '' %>

  <form id="delete_form" style="display: none" method="POST" action="/page/<%= page.link %>/delete"></form>
</div>
